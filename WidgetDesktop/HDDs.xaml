<Window x:Class="WidgetDesktop.HDDs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Hdds"
        Closing="Hdds_Closing"
        SizeToContent="WidthAndHeight" 
        Background="#000000" BorderBrush="Transparent" 
        WindowStyle="None" AllowsTransparency="True"
        MouseUp="Hdds_MouseUp"
        MouseEnter="Hdds_MouseEnter"
        MouseLeave="Hdds_MouseLeave"
        Cursor="Hand" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
       <StackPanel x:Name="HDD_Stack" Grid.Row="1"/> 
        
    </Grid>
</Window>
