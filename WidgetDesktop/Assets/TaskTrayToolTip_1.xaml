<UserControl
    x:Class="WidgetDesktop.Assets.TaskTrayToolTip_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >
    <!-- a simple user control which displays a fixed text within a border -->
    <Border
        Background="{DynamicResource AlternateBackgroundBrush}"
        BorderBrush="Blue" 
        BorderThickness="2"
        CornerRadius="4"
        Opacity="0.8"
        Width="160"
        Height="40">
        <TextBlock
            Text="WidgetDesktop"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Border>

</UserControl> 
